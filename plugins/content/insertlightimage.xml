<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="content">
	<name>Content - Lightbox Image Insert</name>
	<author>Mitrich</author>
	<creationDate>2009</creationDate>
	<copyright>Copyright (C) 2007 - 2009 Joomlatune.com. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>mitrich@joomlaportal.ru</authorEmail>
	<authorUrl>http://joomlatune.com</authorUrl>
	<version>1.0</version>
	<description></description>
	<files>
		<filename plugin="insertlightimage">insertlightimage.php</filename>
		<filename>insertlightimage/default.jpg</filename>
		<filename>insertlightimage/jtimage.php</filename>
	</files>
	<params>
		<param name="enabled" type="radio" default="1" label="Enable Plugin" description="PARAMENABLED">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="mode" type="list" default="1" label="Mode" description="">
			<option value="0">Simple small image</option>
			<option value="1">Small image with lightbox</option>
		</param>
		<param name="resyzetype" type="list" default="1" label="Method of lightbox size generation" description="">
			<option value="0">As a picture size</option>
			<option value="1">As a settings size</option>
		</param>
		<param name="folder" type="text" default="images/stories" label="Folder" description=""/>
		<param name="thumbfolder" type="text" default="thumbnails" label="Thumbnails Folder" description=""/>
		<param name="thumbprefix" type="text" default="thumb_" label="Thumbnails Filename Preefix" description=""/>
	</params>
</install>
